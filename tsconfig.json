{
  "compilerOptions": {
      "module": "commonjs",
      "target": "es2019",
      "moduleResolution": "node",
      "strict": true,
      "allowJs": true,
      "skipLibCheck": true,
      "noImplicitAny": false,
      "forceConsistentCasingInFileNames": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "outDir": "dist"
  },
  "include": ["routes/**/*", "db/index.ts", "bin/start.ts"]
}
